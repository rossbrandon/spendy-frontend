        "prettier": "^2.1.1"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "format": "prettier --check \"**/*.{js,jsx,json,md,html,css,less,scss}\"",
        "format:fix": "prettier --write \"**/*.{js,jsx,json,md,html,css,less,scss}\"",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:react/recommended"
        ],
        "parser": "babel-eslint",
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module",
            "ecmaFeatures": {
                "jsx": true
            }
        },
        "env": {
            "browser": true,
            "es6": true
        },
        "globals": {
            "$": true
        },
        "settings": {
            "react": {
                "version": "^17.0.1"
            }
        },
        "rules": {
            "semi": [
                "error",
                "never"
            ]
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
